{
	"name": "avathar/badge",
	"type": "phpbb-extension",
	"description": "Adds shields.io badge support to phpBB posts via a BBCode dropdown with configurable presets.",
	"homepage": "https://www.avathar.be",
	"version": "1.1.0",
	"time": "2026-02-10",
	"keywords": ["phpbb", "extension", "Badge Extension"],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Sajaki",
			"email": "sajaki@avathar.be",
			"homepage": "https://www.avathar.be",
			"role": "developer"
		}
	],
	"require": {
		"php": ">=7.2.0",
		"composer/installers": "~1.0"
	},
	"extra": {
		"display-name": "Badge Extension",
		"soft-require": {
			"phpbb/phpbb": ">=3.3"
		},
		"version-check": {
			"host": "avathar.be",
			"directory": "/versioncheck",
			"filename": "badge.json"
		}
	}
